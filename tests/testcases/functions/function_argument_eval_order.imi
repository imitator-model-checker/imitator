var

  s : int stack;
  result : int;

(************************************************************)
 automaton pta
(************************************************************)

loc l1: invariant True
	when
    & True
  do {
    mix
      stack_push(2, s);
      stack_push(3, s);
      result := pow(stack_pop(s) (* 3 *), stack_pop(s) (* 2 *)); (* should give pow(3, 2) = 9 *)
  }
  goto lend;


accepting loc lend: invariant True
 end (* pta *)
(************************************************************)


(************************************************************)
(* Initial state *)
(************************************************************)

init := {

    discrete =
      loc[pta] := l1,
      s := stack(),
      result := 0
    ;
    continuous =
        & True
    ;

}


(************************************************************)
(* The end *)
(************************************************************)
end
