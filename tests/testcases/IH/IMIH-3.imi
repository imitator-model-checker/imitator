var

(* Clocks *)
 	x,
		: clock;

(* Discrete *)
	i,
		: int;
(* Parameters *)
	p,
		: parameter;



(************************************************************)
  automaton pta
(************************************************************)
actions: ;

loc l1: invariant True
	when x >= 1 goto l2;
	(* We cheat with non-integer comparisons to ease the test of IH *)
	when x >= 0.5 goto l1bis;

loc l1bis: invariant True
	when x >= 0.5 goto l2;

loc l2: invariant True
	when x = 0.5 goto infiniteLoop;

loc infiniteLoop: invariant i >= 0
	when True do {i <- i + 1} goto infiniteLoop;

end (* pta *)



(************************************************************)
(* Initial state *)
(************************************************************)

init = {
	
    discrete =
		(*------------------------------------------------------------*)
		(* Initial location *)
		(*------------------------------------------------------------*)
		loc[pta] <- l1,

		(*------------------------------------------------------------*)
		(* Initial discrete variables assignments *)
		(*------------------------------------------------------------*)
		i <- 0,
    ;

    continuous =        
		(*------------------------------------------------------------*)
		(* Initial clock constraints *)
		(*------------------------------------------------------------*)
		& x = 0

		(*------------------------------------------------------------*)
		(* Parameter constraints *)
		(*------------------------------------------------------------*)
		& p >= 0
	;
}


(************************************************************)
(* The end *)
(************************************************************)
end
