var

(* Clocks *)
 	x,
		: clock;

(* Parameters *)
	p,
		: parameter;



(************************************************************)
  automaton pta
(************************************************************)
synclabs: a;

loc l1: invariant True
	when x < 1 sync a do {x := 0} goto l1;
	when x = 1 & x = p sync a do {x := 0} goto l2;

accepting loc l2: invariant True
	when x = 1 goto l2;

end (* pta *)



(************************************************************)
(* Initial state *)
(************************************************************)

init :=
	(*------------------------------------------------------------*)
	(* Initial location *)
	(*------------------------------------------------------------*)
	& loc[pta] = l1

	(*------------------------------------------------------------*)
	(* Initial clock constraints *)
	(*------------------------------------------------------------*)
	& x = 0

	(*------------------------------------------------------------*)
	(* Parameter constraints *)
	(*------------------------------------------------------------*)
	& p >= 0
;


(************************************************************)
(* Property specification *)
(************************************************************)

(*** NOTE: we use both the 'accepting' syntax (for NDFS) and the usual IMITATOR syntax for LoopSynth ***)
property := unreachable loc[pta] = l2;


(************************************************************)
(* The end *)
(************************************************************)
end
