var

  i, j, res : int;

fn f() : int begin
  let i1 : int = i + 1 in
  let i2 : int = (i + 1) * 2 in
  i1 + i2
end



automaton P1

  loc s0: invariant True
  when True goto lend;

  accepting loc lend : invariant True

end

automaton P2

  loc s0: invariant True
  when f() + j = 4 do { res := f() } goto lend;

  accepting loc lend : invariant res = 3

end

init := {
  discrete =
    loc[P1]:=s0,
    i := 0,
    loc[P2]:=s0,
    j := 1
  ;

}
