var

(* Clocks *)
 	x
		: clock;

(* Parameters *)
	a
		: parameter;



(************************************************************)
  automaton pta
(************************************************************)
synclabs: ;

loc l0: invariant True
	when x >= 2 & x <= a goto l1;
	when x >= 0 goto l2;

loc l1: invariant True

loc l2: invariant True

end (* pta *)



(************************************************************)
(* Initial state *)
(************************************************************)

init :=
	(*------------------------------------------------------------*)
	(* Initial location *)
	(*------------------------------------------------------------*)
	& loc[pta] = l0

	(*------------------------------------------------------------*)
	(* Initial clock constraints *)
	(*------------------------------------------------------------*)
	& x = 0

	(*------------------------------------------------------------*)
	(* Parameter constraints *)
	(*------------------------------------------------------------*)
	& a >= 0
;


(************************************************************)
(* Property specification *)
(************************************************************)

(* property := AF( loc[pta] = l1 or loc[pta] = l2); *)


(************************************************************)
(* The end *)
(************************************************************)
end
